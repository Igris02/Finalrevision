<Page x:Class="Finalrevision.ToDoListPages.MeetingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Finalrevision.ToDoListPages"
      mc:Ignorable="d" 
      d:DesignHeight="589" d:DesignWidth="575"
      Title="MeetingPage" Height="589" Width="575">

    <Grid Background="#FFF39191">
        <ListBox x:Name="MeetingListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="6,10,19,9" FontSize="20"/>

        <Button x:Name="EditBtn" Content="Edit" HorizontalAlignment="Left" Margin="384,17,0,0" VerticalAlignment="Top" Width="168" Height="30" Visibility="Visible" Click="EditBtn_Click"/>
        <Button x:Name="PrioritizeBtn" Content="Prioritize" HorizontalAlignment="Left" Margin="384,52,0,0" VerticalAlignment="Top" Width="168" Height="30" Visibility="Visible" Click="PrioritizeBtn_Click"/>
        <Button x:Name="DeleteBtn" Content="Delete" HorizontalAlignment="Left" Margin="384,87,0,0" VerticalAlignment="Top" Width="168" Height="30" Visibility="Visible" Click="DeleteBtn_Click"/>
    </Grid>
</Page>
