<Window x:Class="Finalrevision.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finalrevision"
        mc:Ignorable="d"
           Title="MainWindow" Height="775" Width="1035" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="230"/>
        </Grid.ColumnDefinitions>



        <Frame x:Name="MainFrame" 
            Height="589" 
            Background="LightBlue" 
            VerticalAlignment="Top" 
            Margin="0,70,0,0"
            NavigationUIVisibility="Hidden" Grid.Column="1"/>



        <Label x:Name="LabeltoHide" Grid.Column="1" Content="Label" HorizontalAlignment="Left" Margin="50,86,0,0" VerticalAlignment="Top" Height="565" Width="472" Background="#FF797979" Visibility="Hidden"/>



        <Label Content="Left Label" 
           Grid.Column="0" 
           Height="775" 
           Background="LightGray" 
           HorizontalAlignment="Stretch" 
           VerticalAlignment="Top"/>

        <Label  
           Grid.Column="2" 
           Height="775" 
           Background="LightGray" 
           HorizontalAlignment="Stretch" 
           VerticalAlignment="Top"/>

        <Button x:Name="AddTasksBtn" Content="Add Tasks" 
            Grid.Column="1" 
            Width="233" 
            Height="55" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Margin="0,670,0,0" Click="AddTasksBtn_Click"/>

        <TextBox x:Name="TaskTextBox" Grid.Column="1" 
             Height="55" 
             VerticalAlignment="Top" 
             Margin="61,135,64,0"
                 Visibility="Hidden"/>
        <TextBox x:Name="Details" Grid.Column="1" 
     Height="151" 
     VerticalAlignment="Top" 
     Margin="61,223,64,0"
         Visibility="Hidden"/>

        <Button x:Name="LeisureBtn" Grid.Column="2" Content="Leisure" HorizontalAlignment="Center" Margin="0,132,0,0" VerticalAlignment="Top" Height="35" Width="210" Visibility="Visible" Click="LeisureBtn_Click"/>
        <Button x:Name="SchoolProjectBtn" Grid.Column="2" Content="School Projects" HorizontalAlignment="Center" Margin="0,263,0,0" VerticalAlignment="Top" Height="35" Width="210" Click="SchoolProjectBtn_Click"/>
        <Button x:Name="ErrandBtn" Grid.Column="2" Content="Errands" HorizontalAlignment="Center" Margin="0,173,0,0" VerticalAlignment="Top" Height="35" Width="210"  Visibility="Visible" Click="ErrandBtn_Click"/>
        <Button x:Name="AssigmentBtn" Grid.Column="2" Content="Assignments" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Top" Height="35" Width="210" Click="AssigmentBtn_Click"/>
        <Button x:Name="ProjectBtn" Grid.Column="2" Content="Work Porjects" HorizontalAlignment="Center" VerticalAlignment="Top" Height="35" Width="210" Margin="0,433,0,0" Click="ProjectBtn_Click"/>
        <Button x:Name="SchoolEventBtn" Grid.Column="2" Content="School Events" HorizontalAlignment="Center" Margin="0,339,0,0" VerticalAlignment="Top" Height="35" Width="210" Click="SchoolEventBtn_Click"/>
        <Button x:Name="CompleteBtn" Grid.Column="2" Content="Complted Tasks" HorizontalAlignment="Center" VerticalAlignment="Top" Height="34" Width="230" Margin="0,523,0,0" Click="CompleteBtn_Click"/>


        <Button x:Name="AddtoLeisureBtn" Grid.Column="1" Content="Add to Leisure" HorizontalAlignment="Left" Margin="285,385,0,0" VerticalAlignment="Top" Width="224" Height="32" Visibility="Hidden" Click="AddtoLeisureBtn_Click"/>
        <Button x:Name="AddtoErrandBtn" Grid.Column="1" Content="Add to Errands" HorizontalAlignment="Left" Margin="285,422,0,0" VerticalAlignment="Top" Width="224" Height="32" Visibility="Hidden" Click="AddtoErrandBtn_Click"/>
        <Button x:Name="AddtoSchoolProjectBtn" Grid.Column="1" Content="Add to School Projects" HorizontalAlignment="Left" Margin="285,459,0,0" VerticalAlignment="Top" Width="224" Height="32" Visibility="Hidden" Click="AddtoSchoolProjectBtn_Click"/>
        <Button x:Name="AddtoAssignmentBtn" Grid.Column="1" Content="Add to Assignments" HorizontalAlignment="Left" Margin="285,497,0,0" VerticalAlignment="Top" Width="224" Height="32" Visibility="Hidden" Click="AddtoAssignmentBtn_Click"/>
        <Button x:Name="AddtoSchoolEventBtn" Grid.Column="1" Content="Add to School Event" HorizontalAlignment="Left" Margin="285,535,0,0" VerticalAlignment="Top" Width="224" Height="32" Visibility="Hidden" Click="AddtoSchoolEventBtn_Click"/>
        <Button x:Name="AddtoWorkProjectBtn" Grid.Column="1" Content="Add to Work Projects" HorizontalAlignment="Left" Margin="285,573,0,0" VerticalAlignment="Top" Width="224" Height="32" Visibility="Hidden" Click="AddtoWorkProjectBtn_Click"/>
        <Button x:Name="AddtoMeetingBtn" Grid.Column="1" Content="Add to Meetings" HorizontalAlignment="Left" Margin="285,611,0,0" VerticalAlignment="Top" Width="224" Height="32" Visibility="Hidden" Click="AddtoMeetingBtn_Click"/>

        <Label Content="" 
        Grid.Column="0" 
        Height="376" 
        Background="#FF927878" 
        VerticalAlignment="Top"/>
        <Label Content="Reminders" HorizontalAlignment="Center" Margin="0,375,0,0" VerticalAlignment="Top" Width="152" Height="56" FontSize="30"/>
        <Label Content="Priority" HorizontalAlignment="Center" Margin="0,1,0,0" VerticalAlignment="Top" Width="110" Height="56" FontSize="30"/>
        <Button Grid.Column="2" Content="Personal" HorizontalAlignment="Center" Margin="0,83,0,0" VerticalAlignment="Top" Height="34" Width="230"/>
        <Button Grid.Column="2" Content="Study" HorizontalAlignment="Center" Margin="0,219,0,0" VerticalAlignment="Top" Height="34" Width="230"/>
        <Button Grid.Column="2" Content="Work" HorizontalAlignment="Center" VerticalAlignment="Top" Height="34" Width="230" Margin="0,389,0,0"/>
        <Button x:Name="MeetingBtn" Grid.Column="2" Content="Conference/Meeting" HorizontalAlignment="Center" VerticalAlignment="Top" Height="35" Width="210" Margin="0,475,0,0" Click="MeetingBtn_Click"/>
        <Button x:Name="Homebtn" Grid.Column="1" Content="Home" HorizontalAlignment="Left" Margin="448,19,0,0" VerticalAlignment="Top" Width="95" Height="33" Click="Homebtn_Click"/>
        <Calendar x:Name="Calendaryo" Grid.Column="1" HorizontalAlignment="Left" Margin="81,457,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
        <Button x:Name="RemindBtnHide" Grid.Column="1" Content="Remind Me?" HorizontalAlignment="Left" Margin="61,385,0,0" VerticalAlignment="Top" Height="48" Width="141" Visibility="Hidden"/>
        <Frame x:Name="PrioFrame" Content="Frame" Margin="5,48,7,393"/>


    </Grid>
</Window>
